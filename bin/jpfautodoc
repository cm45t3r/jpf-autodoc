#!/bin/bash

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
JAR_FILE="$SCRIPT_DIR/../build/libs/jpf-autodoc-executable.jar"

if [ ! -f "$JAR_FILE" ]; then
    echo "Error: JAR file not found. Please build the project first."
    echo "Run: ./gradlew build"
    exit 1
fi

java -jar "$JAR_FILE" "$@" 